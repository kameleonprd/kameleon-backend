{
  "name": "kameleon-backend",
  "version": "0.1.0",
  "description": "AWS CDK backend for Kameleon PRD Assistant",
  "main": "lib/index.js",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc",
    "watch": "tsc -w",
    "watch:cdk": "cdk watch --all -c environment=dev --profile kameleon",
    "test": "jest",
    "cdk": "cdk",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "synth": "cdk synth",
    "predeploy:dev": "npm run lint && npm run test && npm run build",
    "deploy:dev": "cdk deploy --all -c environment=dev --profile kameleon",
    "predeploy:stage": "npm run lint && npm run test && npm run build",
    "deploy:stage": "cdk deploy --all -c environment=stage --profile kameleon",
    "predeploy:prod": "npm run lint && npm run test && npm run build",
    "deploy:prod": "cdk deploy --all -c environment=prod --profile kameleon"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "aws-cdk": "^2.150.0",
    "esbuild": "^0.21.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.0.0",
    "@aws-lambda-powertools/metrics": "^2.0.0",
    "@aws-lambda-powertools/tracer": "^2.0.0",
    "@aws-sdk/client-bedrock-runtime": "^3.600.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.600.0",
    "@aws-sdk/client-dynamodb": "^3.600.0",
    "@aws-sdk/client-s3": "^3.600.0",
    "@aws-sdk/lib-dynamodb": "^3.600.0",
    "@aws-sdk/s3-request-presigner": "^3.937.0",
    "@middy/core": "^5.4.0",
    "@middy/http-cors": "^5.4.0",
    "@middy/http-error-handler": "^5.4.0",
    "@middy/http-json-body-parser": "^5.4.0",
    "aws-cdk-lib": "^2.150.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21",
    "ulid": "^3.0.1",
    "zod": "^3.23.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
